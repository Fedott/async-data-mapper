{
    "name": "fedot/async-data-mapper",
    "description": "Simple async datamaper",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir \"Fedot\" Fedorov",
            "email": "fedotru@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fedot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Fedot\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "amphp/amp": "^2@dev",
        "jms/metadata": "^1.6",
        "doctrine/annotations": "^1.4",
        "doctrine/instantiator": "^1.0"
    },
    "require-dev": {
        "amphp/redis": "dev-amp_v2",
        "symfony/serializer": "^3.2",
        "phpunit/phpunit": "^6.0",
        "symfony/property-access": "^3.2",
        "symfony/property-info": "^3.2"
    },
    "suggest": {
        "amphp/redis": "Needed for Redis implementation",
        "symfony/serializer": "Needed for Redis implementation"
    }
}
